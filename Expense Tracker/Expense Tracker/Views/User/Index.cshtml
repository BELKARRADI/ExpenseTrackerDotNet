@model IEnumerable<Expense_Tracker.Models.User>

@{
    ViewData["PageTitle"] = "Users";
    ViewData["PageActionText"] = "+ New User";
    ViewData["PageActionUrl"] = "/User/AddOrEdit";
}


<div class="row">
    <div>
        <ejs-grid id="users" dataSource="@Model" gridLines="None"
                  allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Username" field="Username" width="150px"></e-grid-column>
                <e-grid-column headerText="First Name" field="FirstName" width="150px"></e-grid-column>
                <e-grid-column headerText="Last Name" field="LastName" width="150px"></e-grid-column>
                <e-grid-column headerText="Role" field="Role" width="150px"></e-grid-column>
                <e-grid-column headerText="Actions" template="#actionColumnTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>

</div>


<script id="actionColumnTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="/User/AddOrEdit/${UserId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="/User/Delete/${UserId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration"
            onclick="return confirm(&quot;Are sure to delete this record?&quot;)">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>
